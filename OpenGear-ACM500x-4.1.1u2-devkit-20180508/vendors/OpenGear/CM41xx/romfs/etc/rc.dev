# This script is sourced by rc, and creates the required dev nodes for this platform,

# Flash devices
mkdir -p /dev/flash
ln -s ../mtd0      /dev/flash/boot
ln -s ../mtd0      /dev/flash/ethmac
ln -s ../mtd0      /dev/flash/bootarg
ln -s ../mtd1      /dev/flash/config
ln -s ../mtdblock1 /dev/flash/configblock
ln -s ../mtd2      /dev/flash/image
ln -s ../mtd3      /dev/flash/all

# Misc 
mknod /dev/ledman c 126 0



