###############################################################################
# Tacacs, no local
###############################################################################
auth [success=1 default=ignore] pam_succeed_if.so login != root quiet
auth sufficient pam_unix.so
auth requisite pam_tacplus.so encrypt service=raccess
auth optional pam_adduser.so

account [success=1 default=ignore] pam_tacplus.so encrypt service=raccess
account sufficient pam_unix.so
account optional pam_adduser.so

session optional pam_tacplus.so encrypt service=raccess
session required pam_unix.so

