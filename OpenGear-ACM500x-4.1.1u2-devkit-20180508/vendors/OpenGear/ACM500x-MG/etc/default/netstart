#!/bin/sh
#
# Warning - this script is automatically generated - do NOT edit
#
ifconfig lo 127.0.0.1
route del -net 127.0.0.0 netmask 255.0.0.0 2> /dev/null
route add -net 127.0.0.0 netmask 255.0.0.0 lo
route del default 2> /dev/null

brctl addbr br0
brctl stp br0 off
brctl setfd br0 0

ifconfig eth0 0.0.0.0 up 2> /dev/null
ifconfig eth1 0.0.0.0 up 2> /dev/null
brctl addif br0 eth0 2> /dev/null
brctl addif br0 eth1 2> /dev/null

ifconfig br0 10.2.30.254 netmask 255.255.255.0 broadcast 10.2.30.255 up
mii-tool --restart eth0 > /dev/null
mii-tool --restart eth1 > /dev/null

sh /etc/ifup

if [ -f /etc/config/crontab.root ]; then
	/usr/bin/crontab /etc/config/crontab.root
fi
