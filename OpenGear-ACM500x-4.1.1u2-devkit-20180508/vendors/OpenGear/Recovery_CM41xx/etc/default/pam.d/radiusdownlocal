###############################################################################
# Radius, local iff down
###############################################################################
auth [success=1 default=ignore] pam_succeed_if.so login != root quiet
auth sufficient pam_unix.so
auth [authinfo_unavail=ignore success=1 default=2] pam_radius_auth.so conf=/etc/config/pam_radius_auth.conf
auth requisite pam_unix.so use_first_pass
auth optional pam_adduser.so

account [authinfo_unavail=ignore auth_err=ignore success=1] pam_radius_auth.so conf=/etc/config/pam_radius_auth.conf
account sufficient pam_unix.so
account optional pam_adduser.so
account required pam_localuser.so

session optional pam_radius_auth.so conf=/etc/config/pam_radius_auth.conf
session required pam_unix.so
