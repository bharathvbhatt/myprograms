/dts-v1/;
/include/ "armada-370.dtsi"

/ {
	model = "Opengear CM7196";
	compatible = "opengear,cm7000", "marvell,armada370", "marvell,armada-370-xp";

	chosen {
		bootargs = "console=ttyS0,115200 earlyprintk debug root=/dev/ram0";
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x80000000>; /* 2 GB */
	};

	soc {
		internal-regs {
			serial@12000 {
				clock-frequency = <200000000>;
				status = "okay";

				pinctrl-0 = <&uart0_pins>;
				pinctrl-names = "default";
			};
			timer@20300 {
				clock-frequency = <600000000>;
				status = "okay";
			};

			watchdog@20300 {
				compatible = "marvell,armada-370-wdt";
				reg = <0x20300 0x34>, <0x20704 0x4>;
				clocks = <&coreclk 2>;
				status = "okay";
			};

			pinctrl {
				/* UART Pins */
				uart0_pins: uart0-pins {
					marvell,pins = "mpp0", "mpp1";
					marvell,function = "uart0";
				};
				
				/* Ge0 Pins */
				ge0_pins: ge0-pins {
					marvell,pins = "mpp5", "mpp6", "mpp7", "mpp8",
							"mpp9", "mpp10", "mpp11", "mpp12",
							"mpp13", "mpp14", "mpp15", "mpp16";
					marvell,function = "ge0";
				};
				/* MDIO Pins */
				mdio_pins: mdio-pins { 
					marvell,pins = "mpp17", "mpp18";
					marvell,function = "ge";
				};
				/* Ge1 Pins */
				ge1_pins: ge1-pins {
					marvell,pins = "mpp19", "mpp20", "mpp21", "mpp22",
							"mpp23", "mpp24", "mpp25", "mpp26",
							"mpp27", "mpp28", "mpp29", "mpp30";
					marvell,function = "ge1";
				};
			
				/* SPI */
				spi_pins: spi-pins {
					marvell,pins = "mpp32", "mpp56", "mpp63", "mpp64", "mpp65";
					marvell,function = "spi0";
				};

				/* NAND */
				nand_pins: nand-pins {
					marvell,pins = "mpp34", "mpp35", "mpp36", "mpp37", "mpp38",
							"mpp39", "mpp40", "mpp41", "mpp42", "mpp43", 
							"mpp44", "mpp45", "mpp46", "mpp33";
					marvell,function = "dev";
				};

				erase_button_pin: erase-button-pin {	
					marvell,pins = "mpp55";
					marvell,function = "gpo";
				};
			
				dio_pins: dio-pins {
					marvell,pins = "mpp48", "mpp49", "mpp50", "mpp51";
					marvell,function = "gpio";
				};

				reset_3v3_pin: reset-3v3-pin {	
					marvell,pins = "mpp52";
					marvell,function = "gpio";
				};
				
				wdt_en_pin: wdt-en-pin {	
					marvell,pins = "mpp60";
					marvell,function = "gpio";
				};
				
				wdt_tickle_pin: wdt-tickle-pin {	
					marvell,pins = "mpp61";
					marvell,function = "gpio";
				};
				
			};

			gpio_keys {
				compatible = "gpio-keys";
				#address-cells = <1>;
				#size-cells = <0>;
				button@0 {
					label = "Erase Button";
					linux,code = <84>; /* Delete */
					gpios = <&gpio1 23 1>;
				};
			};

			mdio {
				pinctrl-0 = <&mdio_pins>;
				pinctrl-names = "default";
				
				phy0: ethernet-phy@0 {
					reg = <0>;
					marvell,reg-init = <18 20 0xffff 0x0226>;
				};

				phy1: ethernet-phy@1 {
					reg = <1>;
					marvell,reg-init = <18 20 0xffff 0x0226>;
				};
			
			};

			i2c@11000 {
				status = "okay";
				clock-frequency = <100000>;
			
				tca6424: gpio@22 {
					compatible = "ti,tca6424";
					reg = <0x22>;
					gpio-controller;
					#gpio-cells = <2>;
				};
			};

			gpio_leds {
				compatible = "gpio-leds";

				green_power_led {
					label = "cm7196:green:power";
					gpios = <&tca6424 4 0>;
					default-state = "on";
				};

				green_hb_led {
					label = "cm7196:green:heartbeat";
					gpios = <&tca6424 5 0>;
					linux,default-trigger = "heartbeat";
				};

				green_serial_led {
					label = "cm7196:green:serial";
					gpios = <&tca6424 6 0>;
					linux,default-trigger = "serial";
				};
				
				green_service_led {
					label = "cm7196:green:service";
					gpios = <&tca6424 7 0>;
					linux,default-trigger = "none";
				};
			};

			ethernet@70000 {
				status = "okay";
				phy = <&phy0>;
				phy-mode = "rgmii-id";
				pinctrl-0 = <&ge0_pins>;
				pinctrl-names = "default";
				
			};
			ethernet@74000 {
				status = "okay";
				phy = <&phy1>;
				phy-mode = "rgmii-id";
				pinctrl-0 = <&ge1_pins>;
				pinctrl-names = "default";
			};

			usb@50000 {
				status = "okay";
			};

			usb@51000 {
				status = "okay";
			};
			
			nand@d0000 {
				status = "okay";
				pinctrl-0 = <&nand_pins>;
				pinctrl-names = "default";
				interrupts = <113>;

				ubi@0 {
					label = "ubi";
					reg = <0x00000000 0xFFE00000>;
				};
			};
			
			spi0: spi@10600 {
				status = "okay";
				pinctrl-0 = <&spi_pins>;
				pinctrl-names = "default";

				spi-flash@0 {
					#address-cells = <1>;
					#size-cells = <1>;
					compatible = "n25q256a";
					reg = <0>; /* Chip select 0 */
					spi-max-frequency = <50000000>;
					u-boot@0 {
						label = "u-boot";
						reg = <0x00000000 0x00100000>;
					};

					u-boot-config-block@100000 {
						label = "u-boot config block";
						reg = <0x00100000 0x00020000>;
					};

					factory-img@120000 {
						label = "factory_img";
						reg = <0x00120000 0x1400000>;
					};

					system-log@1520000 {
						label = "system_log";
						reg = <0x1520000 0x00200000>;
					};

					mtd-oops@1720000 {
						label = "mtd-oops";
						reg = <0x1720000 0x00080000>;
					};

					reserved@17A0000 {
						label = "reserved";
						reg = <0x17A0000 0x860000>;
					};

					all-spi@0 {
						label = "all-spi";
						reg = <0x0 0x2000000>;
					};

				};
			};

			pcie-controller {
				status = "okay";

				pcie@1,0 {
					/* Port 0, Lane 0 */
					status = "okay";
				};

				pcie@2,0 {
					/* Port 1, Lane 0 */
					status = "okay";
				};
			};
		};
	};
};
